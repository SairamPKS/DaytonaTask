<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background=""
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Priority"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center" />

    <!-- Grid Layout for Priority Selection -->
    <GridLayout
        android:id="@+id/gridPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3"
        android:paddingTop="16dp">

        <!-- Priority Buttons 1-10 -->
        <Button
            android:id="@+id/btnPriority1"
            style="@style/PriorityButton"
            android:text="1"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority2"
            style="@style/PriorityButton"
            android:text="2"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority3"
            style="@style/PriorityButton"
            android:text="3"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority4"
            style="@style/PriorityButton"
            android:text="4"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority5"
            style="@style/PriorityButton"
            android:text="5"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority6"
            style="@style/PriorityButton"
            android:text="6"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority7"
            style="@style/PriorityButton"
            android:text="7"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority8"
            style="@style/PriorityButton"
            android:text="8"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority9"
            style="@style/PriorityButton"
            android:text="9"
            android:drawableTop="@drawable/flag_img" />

        <Button
            android:id="@+id/btnPriority10"
            style="@style/PriorityButton"
            android:text="10"
            android:drawableTop="@drawable/flag_img" />

    </GridLayout>

    <!-- Buttons for Cancel and Save -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@null"
            android:textColor="" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/white"
            android:padding="10dp" />

    </LinearLayout>

</LinearLayout>
